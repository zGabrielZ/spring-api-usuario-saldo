<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <property name="LOGS_DIR_APP"  value="logs" />

    <!-- Log para console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>